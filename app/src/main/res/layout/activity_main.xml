<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/size_small"
        android:layout_marginHorizontal="@dimen/size_normal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnCategories"
            style="@style/StyleNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_weight="1"
            android:backgroundTint="@color/button_colors_categories"
            android:gravity="center"
            android:text="@string/title_categories" />

        <Button
            android:id="@+id/btnFavorites"
            style="@style/StyleNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_weight="1"
            android:text="@string/title_favourites"
            app:backgroundTint="@color/button_colors_favorites"
            app:icon="@drawable/ic_heart"
            app:iconGravity="textEnd"
            app:iconSize="@dimen/icon_size" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>