<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_marginHorizontal="@dimen/size_small"
        android:layout_marginVertical="@dimen/size_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/size_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background">
            
            </ImageView>

            <TextView
                android:id="@+id/title_item_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_small"
                android:fontFamily="@font/montserrat_alternates_semi_bold"
                android:gravity="start"
                tools:text="Бургеры"
                android:textAllCaps = "true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_normal">
                
            </TextView>
            
            <TextView
                android:id="@+id/description_item_category"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/size_small"
                android:layout_marginBottom="@dimen/size_small"
                android:gravity="start"
                android:textSize="@dimen/text_size_description"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/text_description"
                tools:text="Рецепты всех популярных видов бургеров">
            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>